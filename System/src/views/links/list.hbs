<div class="container p-4">
    <div class="row">

        {{#each lista_Links}}

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p>{{timeago_Hace_unos_min  created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger">Borrar Link</a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>

        {{!-- Si no hay Listado --}}
        {{else}}

        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay registros para mostrar</p>
                <a href="/links/add">Agregar un Registro</a>
            </div>
        </div>
        
         {{/each}}

    </div>
</div>